{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es2022"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.js",
    "node_modules"
  ]
}
